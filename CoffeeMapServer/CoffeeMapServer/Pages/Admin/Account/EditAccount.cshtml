@page "{guid?}"
@model CoffeeMapServer.Pages.Admin.Account.EditAccountModel
@{

    @if (Model.Role == "Master")
        Layout = "_MasterLayout";
}
@section scripts{

    <script type="text/javascript" src="~/dist/jquery-3.5.1.js"></script>
    <script>
        $('#password, #confirm_password').on('keyup', function () {
            if ($('#new_password').val() == $('#confirmation').val()) {
                $('#message').html('Everything`s good:)').css('color', 'green');
            } else
                $('#message').html('Passwords aren`t matching').css('color', 'red');
        });
    </script>
}
<section class="content-header">
    <h1>
        Edit account
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <form method="post">
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="@Model._User.Id" value="@Model._User.Id">
            <input type="hidden" class="form-control" asp-for="@Model._User.Login" value="@Model._User.Login">
        </div>
        <div class="form-group">
            <label for="mail">Email</label>
            <input type="text" id="email" class="form-control" asp-for="@Model._User.Email">
            <label for="old_password">Old Passsword</label>
            <input type="text" id="old_password" class="form-control" asp-for="@Model._User.Password" value="">
            <label for="new_password">New Password</label>
            <input type="text" id="new_password" class="form-control" asp-for="@Model.NewPassword">
            <h6 id="message"></h6>
            <label for="passwordConfirmation">Password Confirmation</label>
            <input type="text" id="confirmation" class="form-control">
        </div>
        <button type="submit" asp-page-handler="Process" class="btn btn-primary">Submit</button>
    </form>
</section>
@page "{id:int}"
@model CoffeeMapServer.Views.Admin.EditRoasterModel
<section class="content-header">
    <h1>
        Update roaster
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <form method="post">
        <div class="form-group">
            <label for="Id">Id</label>
            <input type="text" class="form-control" asp-for="@Model.roaster.Id" value="@Model.roaster.Id">
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <label for="office">Office Address</label>
            <label for="phone">Contact number</label>
            <label for="mail">Email</label>
            <label for="Address">Office address</label>
            <label for="website">Web-site link</label>
            <label for="instagram">instagram link</label>
            <label for="vk">vk link</label>
            <label for="facebook">Facebook link</label>
            <label for="telegram">Telegram link</label>
            <input type="text" name="Name" maxlength="30" class="form-control" asp-for="@Model.roaster.Name" required>
            <input type="text" name="phone" pattern="+7-([0-9]){3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" class="form-control" asp-for="@Model.roaster.ContactNumber" required>
            <input type="text" name="mail" pattern="[^@@&%#(){}[]'|,.-`~$]@@[A-Za-z0-9].[a-z]" class="form-control" asp-for="@Model.roaster.ContactEmail">
            <input type="number" name="Address" class="form-control" asp-for="@Model.roaster.OfficeAddressId" required>
            <input type="text" name="website" class="form-control" pattern="[^].[a-zа-я]" asp-for="@Model.roaster.WebSiteLink">
            <input type="text" name="instagram" class="form-control" pattern="instagram.com/[^]" asp-for="@Model.roaster.InstagramProfileLink">
            <input type="text" name="vk" class="form-control" pattern="vk.com/[^]" asp-for="@Model.roaster.VkProfileLink">
            <input type="text" name="telegram" class="form-control" pattern="tgclick.com/[^]" asp-for="@Model.roaster.TelegramProfileLink">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</section>
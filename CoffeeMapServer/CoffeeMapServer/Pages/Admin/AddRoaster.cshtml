@page
@model CoffeeMapServer.Views.Admin.AddRoasterModel
<section class="content-header">
    <h1>
        Create roaster note
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <form method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text"  maxlength="30" class="form-control" asp-for="@Model.roaster.Name" required>
            <label for="phone">Contact number</label>
            <input type="text"  pattern="+7-([0-9]){3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" class="form-control" asp-for="@Model.roaster.ContactNumber" required>
            <label for="mail">Email</label>
            <input type="text" pattern="[^@@&%#(){}[]'|,.-`~$]@@[A-Za-z0-9].[a-z]" class="form-control" asp-for="@Model.roaster.ContactEmail">
            <label for="office">Office Address</label>
            <input type="text" minlength="10" class="form-control" asp-for="@Model.address.AddressStr" required>
            <label for="hours">Opening hours</label>
            <input type="text" pattern="[А-Я]{2}-[А-Я]{2} [0-9]{2}:[0-6]{1}[0-9]{1}-[0-9]{2}:[0-6]{1}[0-9]{1}" class="form-control" asp-for="@Model.address.OpeningHours">
            <label for="website">Web-site link</label>
            <input type="text" class="form-control" pattern="[^].[a-zа-я]" asp-for="@Model.roaster.WebSiteLink">
            <label for="instagram">instagram link</label>
            <input type="text" class="form-control" pattern="instagram.com/[^]" asp-for="@Model.roaster.InstagramProfileLink">
            <label for="vk">vk link</label>
            <input type="text" class="form-control" pattern="vk.com/[^]" asp-for="@Model.roaster.VkProfileLink">
            <label for="telegram">Telegram link</label>
            <input type="text" class="form-control" pattern="tgclick.com/[^]" asp-for="@Model.roaster.TelegramProfileLink">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</section>




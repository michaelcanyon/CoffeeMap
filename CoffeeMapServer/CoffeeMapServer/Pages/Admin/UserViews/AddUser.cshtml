@page "{StatusCode}"
@model CoffeeMapServer.Pages.Admin.UserViews.AddUserModel
@section scripts{
    <script type="text/javascript" src="~/content_root/dist/jquery-3.5.1.js" ></script>
    <script type="text/javascript" src="~/content_root/CustomScripts/AddUser.js" ></script>

}
@{
    Layout = "_MasterLayout";
}
<section class="content-header">
    <h1>
        Добавить пользователя
    </h1>
</section>

<!-- Main content -->
<section class="content container-fluid">

    <form method="post">
        <div class="form-group"
             id="editForm">

            <label for="login">Логин</label>
            <input type="text"
                   maxlength="30"
                   id="login"
                   class="form-control"
                   asp-for="@Model.Ruser.Login"
                   required>
            <div id="login_mes"></div>

            <label for="mail">Email</label>
            <input type="text"
                   id="email"
                   class="form-control"
                   asp-for="@Model.Ruser.Email"
                   required>
            <div id="email_mes"></div>

            <label for="password">Пароль</label>
            <input type="password"
                   minlength="8"
                   class="form-control"
                   asp-for="@Model.Ruser.Password"
                   required>

            <label for="role">Роль</label>
            <select class="form-control"
                    asp-for="@Model.Ruser.Role"
                    required>

                <option value="Admin">Admin</option>
                <option value="Master">Master</option>
            </select>

        </div>

        <button type="submit"
                id="confirm_button"
                class="btn btn-flat bg-primary button_style">
            Добавить
        </button>

    </form>

    @if (Model.ErrorStatusCode.Equals("601"))
    {
        <span style="color:red;">Пользователь с таким именем уже зарегистрирован</span>
    }
    else if (Model.ErrorStatusCode.Equals("602"))
    {
        <span style="color:red;">Данный email уже используется!</span>
    }
</section>
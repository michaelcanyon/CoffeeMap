@page "{StatusCode}"
@model CoffeeMapServer.Views.Admin.RoasterViews.AddRoasterModel
@{

    @if (Model.Role == "Master")
        Layout = "_MasterLayout";
}

@section styles
{
    <link rel="stylesheet" href="~/tagify-master/dist/tagify.css" type="text/css">
}

@section scripts{

    <script type="text/javascript" src="~/dist/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="~/tagify-master/dist/jQuery.tagify.min.js"></script>
    <script type="text/javascript" src="~/dist/jquery.maskedInput.js"></script>
    <script type="text/javascript" src="~/CustomScripts/AddRoasterNotes.js">
    </script>
    <script>
        $(document).ready(function () {
            $('[name=tags]').tagify({
                duplicates: false,
                delimiters: " ",
                maxTags: 10,
                backspace: true
            });
        });
    </script>
}

<section class="content-header">
    <h1>
        Create roaster note
    </h1>
</section>

<!-- Main content -->
<section class="content container-fluid">

    @if (Model.RStatusCode.Equals("601"))
    {
        <span style="color:red;
              font-weight:bold;">
            Roaster with such name already exists
        </span>
    }
    <br />

    <form method="post"
          enctype="multipart/form-data">

        <div class="form-group">

            <label for="personName">Contact Person Name</label>
            <input type="text"
                   class="form-control"
                   asp-for="@Model.Roaster.ContactPersonName"
                   placeholder="Иванов Иван"
                   required>

            <label for="personPhone">Contact Person Phone</label>
            <input type="text"
                   id="contactPersonnumber"
                   class="form-control"
                   asp-for="@Model.Roaster.ContactPersonPhone"
                   placeholder="+7-(800)-(555)-35-35"
                   required>

            <label for="Name">Name</label>
            <input type="text"
                   id="title"
                   class="form-control"
                   asp-for="@Model.Roaster.Name"
                   placeholder="Обжарщик N"
                   required>
            <div id="title_mes">
            </div>

            <label for="priority">Priority</label>
            <input type="text"
                   pattern="[0-9]{2}"
                   class="form-control"
                   asp-for="@Model.Roaster.Priority"
                   placeholder="5"
                   required>
            <div id="priority_mes">
            </div>

            <label for="phone">Contact number</label>
            <input type="text"
                   id="contactnumber"
                   class="form-control"
                   asp-for="@Model.Roaster.ContactNumber"
                   placeholder="+7-(800)-(555)-35-35"
                   required>
            <div id="contactnumber_mes">
            </div>

            <label for="mail">Email</label>
            <input type="text"
                   id="email"
                   class="form-control"
                   placeholder="anymail@mail.com"
                   asp-for="@Model.Roaster.ContactEmail">
            <div id="email_mes">
            </div>

            <label for="office">Office Address</label>
            <input type="text"
                   id="AddressStr"
                   minlength="10"
                   class="form-control"
                   placeholder="3-я Ул. Строителей, д.25"
                   asp-for="@Model.Address.AddressStr"
                   required>
            <div id="address_waring_mes">
            </div>
            <div id="addressStr_mes">
            </div>

            <label for="hours">Opening hours</label>
            <input type="text"
                   id="hours"
                   class="form-control"
                   placeholder="пн-пт 10:00-20:00"
                   asp-for="@Model.Address.OpeningHours"
                   required>
            <div id="hours_mes">
            </div>

            <label for="latitude">Latitude</label>
            <input type="text"
                   id="latitude"
                   class="form-control"
                   placeholder="0"
                   asp-for="@Model.Address.Latitude"
                   required>
            <div id="latitude_mes">
            </div>

            <label for="longitude">Longitude</label>
            <input type="text"
                   id="longitude"
                   class="form-control"
                   placeholder="0"
                   asp-for="@Model.Address.Longitude"
                   required>
            <div id="longitude_mes">
            </div>

            <label for="tags">Tags:</label>
            <input name="tags"
                   type="text"
                   class="form-control"
                   asp-for="@Model.Tags">

            <br />
            <label for="website">Web-site link</label>
            <input type="text"
                   id="web"
                   class="form-control"
                   placeholder="e.g www.roastersite.com"
                   asp-for="@Model.Roaster.WebSiteLink">

            <label for="instagram">instagram link</label>
            <input type="text"
                   id="iglink"
                   class="form-control"
                   placeholder="e.g instagram.com/account"
                   asp-for="@Model.Roaster.InstagramProfileLink">

            <label for="vk">vk link</label>
            <input type="text"
                   id="vklink"
                   class="form-control"
                   placeholder="e.g vk.com/id4738346343634634634"
                   asp-for="@Model.Roaster.VkProfileLink">

            <label for="telegram">Telegram link</label>
            <input type="text"
                   id="tglink"
                   class="form-control"
                   placeholder="e.g t.me/group1234566"
                   asp-for="@Model.Roaster.TelegramProfileLink">

            <label for="picture">Picture</label>
            <input type="file"
                   accept="image/jpeg,
                           image/png,
                           image/jpg,
                           image/bmp,
                           image/gif"
                   class="form-control"
                   asp-for="@Model.Picture">

            <label for="description">Description</label>
            <textarea type="text"
                      class="form-control"
                      placeholder="Описание организации"
                      asp-for="@Model.Roaster.Description"
                      required>
            </textarea>
        </div>

        <button type="submit"
                 id="confirm_button"
                class="btn btn-primary">
            Create
        </button>
    </form>
</section>